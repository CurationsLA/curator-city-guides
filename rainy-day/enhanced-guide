<script>
// Weather alerts fetch (OpenWeatherMap OneCall placeholder)
// Requires OPENWEATHER_API_KEY set as server-side secret and injected or proxy'd into the page.
// This client-side code assumes the site will inject a runtime variable OPENWEATHER_API_KEY via configuration or server rendering.
// For static builds, run the scripts/fetch-events.js at build time to bake alerts into the HTML, or configure a server endpoint that returns alerts.
(async function(){
  const OPENWEATHER_API_KEY = window.OPENWEATHER_API_KEY || ''; // recommended to inject server-side
  const LAT = 34.0522;
  const LON = -118.2437;
  if (!OPENWEATHER_API_KEY) {
    // Nothing to fetch; show nothing. Editors can test by setting window.OPENWEATHER_API_KEY in console.
    return;
  }
  try {
    const url = `https://api.openweathermap.org/data/2.5/onecall?lat=${LAT}&lon=${LON}&exclude=minutely,hourly,daily,current&appid=${OPENWEATHER_API_KEY}`;
    const resp = await fetch(url);
    if (!resp.ok) throw new Error('Weather fetch failed');
    const data = await resp.json();
    if (data && data.alerts && data.alerts.length > 0) {
      const alert = data.alerts[0];
      document.getElementById('weather-alert-title').textContent = alert.event || 'Weather Alert';
      document.getElementById('weather-alert-desc').textContent = alert.description ? alert.description.slice(0,200) + '...' : '';
      document.getElementById('weather-alert-link').href = alert.sender_url || 'https://www.weather.gov/lox/';
      const bar = document.getElementById('weather-alert-bar');
      bar.style.display = 'block';
      document.getElementById('weather-alert-dismiss').onclick = () => { bar.style.display = 'none'; };
    }
  } catch (err) {
    console.warn('Weather alerts unavailable', err);
  }
})();
</script>

<script>
// Map placeholder using Leaflet + Mapbox tiles (mapbox token required)
(function(){
  const MAPBOX_ACCESS_TOKEN = window.MAPBOX_ACCESS_TOKEN || '';
  if (!MAPBOX_ACCESS_TOKEN) return;
  // Minimal Leaflet map bootstrap
  // Host must include Leaflet CSS & JS or the site should load them globally.
  try {
    const L = window.L;
    if (!L) {
      console.warn('Leaflet not loaded — include Leaflet JS & CSS on the page or via Ghost theme assets.');
      return;
    }
    const map = L.map('hot-soup-map').setView([34.0522, -118.2437], 10);
    L.tileLayer(`https://api.mapbox.com/styles/v1/{id}/tiles/{z}/{x}/{y}?access_token=${MAPBOX_ACCESS_TOKEN}`, {
      id: 'mapbox/streets-v11',
      tileSize: 512,
      zoomOffset: -1
    }).addTo(map);

    // Neighborhood 'hot soup index' sample markers (replace with real data or a GeoJSON layer)
    const neighborhoods = [
      { name: 'DTLA', coords: [34.0407, -118.2468], score: 9 },
      { name: 'Hollywood', coords: [34.0928, -118.3287], score: 7 },
      { name: 'Koreatown', coords: [34.0603, -118.3080], score: 8 },
      { name: 'Westwood', coords: [34.0635, -118.4455], score: 6 },
      { name: 'Miracle Mile', coords: [34.0625, -118.3566], score: 7 },
      { name: 'Pasadena', coords: [34.1478, -118.1445], score: 5 }
    ];
    neighborhoods.forEach(n => {
      const color = n.score >= 8 ? '#d62828' : n.score >= 6 ? '#f77f00' : '#90be6d';
      const circle = L.circle(n.coords, { radius: 3000, color, fillColor: color, fillOpacity: 0.3 });
      circle.bindPopup(`${n.name} — Hot Soup Index: ${n.score}/10`);
      circle.addTo(map);
    });
  } catch (e) {
    console.warn('Map initialization failed', e);
  }
})();
</script>

